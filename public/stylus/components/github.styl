//==============================================================================

// Title:
// GitHub

// Description:
// GitHub section styling

//==============================================================================

.github
  width 100%
  float left
  padding 70px 0 100px
  border-bottom 1px solid #d5d5d5

  .section-title
    background url('../images/github-section-icon.png') no-repeat left center

.github__link
  float right
  font-weight 700
  color #3a424c
  margin 14px 0

.github__projects-wrapper
  width 100%
  float left

.github__projects
  width 100%
  float left
  max-width 700px

.github__projects__project
  width 100%
  float left
  position relative
  border-bottom 1px solid #f2f2f2
  padding 0 0 20px 0
  margin 0 0 20px 0

.github__projects__project__link
  width 100%
  float left
  &:hover
    text-decoration none

    .github__projects__project__link__description
      color #59d2d1

.github__projects__project__link__name
  width 100%
  float left
  margin 0 0 5px 0
  color #6d7681
  font-size 1.0625em

.github__projects__project__link__description
  font-size 0.9375em
  color #9aa4af
  transition color 0.3s ease

.github__projects__project__link__stars
  top 0
  right 0
  height 14px
  padding 0 0 0 20px
  position absolute
  font-weight 700
  color #9e9e9e
  background url('../images/star-icon.png') no-repeat left

//------------------------------------------------------------------------------
// Retina Media Queries
//------------------------------------------------------------------------------

@media $mediaRetina

  .github .section-title
    background url('../images/github-section-icon@2x.png') no-repeat left center
    background-size 39px

  .github__projects__project__link__stars
    background url('../images/star-icon@2x.png') no-repeat left
    background-size 15px 14px

//------------------------------------------------------------------------------
// Media queries
//------------------------------------------------------------------------------

@media (max-width: 400px)

  .github
    padding 30px 0 30px

  .github__link
    display none
